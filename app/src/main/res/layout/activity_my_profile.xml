<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Others_Profile_Page">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/MyProfileImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profiledummy"/>

    <ImageView
        android:id="@+id/EditProfile"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/MyProfileImg"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="360dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="14dp"
        android:src="@drawable/editicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:layout_margin="1dp"
        android:backgroundTint="#308FDC"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <TextView
        android:id="@+id/txtVName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtVUserName"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="6dp"
        android:text="Name   : "
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtVUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MyProfileImg"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="UserName : "
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtVBranch"
        android:layout_margin="10sp"
        android:layout_below="@+id/txtVName"
        android:textStyle="bold"
        android:text="Branch   :"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/txtVEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtVBranch"
        android:layout_margin="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        android:text="Email    :"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>